{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:storybook/recommended",
    "plugin:jest-dom/recommended"
  ],
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier",
    "jest-dom"
  ],
  "ignorePatterns": [
    "*.d.ts"
  ],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "printWidth": 100,
        "trailingComma": "es5",
        "semi": true,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "useTabs": true,
        "tabWidth": 2,
        "endOfLine": "auto",
        "singleAttributePerLine": true,
        "max-len": [
          "error",
          {
            "code": 100
          }
        ]
      }
    ]
  }
}
